<%= form_with model: user, local: true do |f| %>
  <div class= "field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class= "field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class= "field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class= "field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class= "btn">
    <%= f.submit "登録" %>
  </div>
<% end %>